<h2>Lawyer Account Details</h2>

<%= form_for @user_account do |f| %>
  <% if @user_account.errors.any? %>
    <div id="error_explanation">
      <b><%= pluralize(@user_account.errors.count, "error") %> prohibited this user account from being saved:</b>

      <ul>
        <% @user_account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :years_experience %>
    <%= f.number_field :years_experience, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label "Yes, I'm a Lawyer..." %>
    <%= f.check_box :lawyer, {}, checked_value='true', unchecked_value='true' %>
  </div>

  <%= f.submit 'Save and Finish', class: 'btn btn-primary' %>
<% end %>