<% if @request.errors %>
<ul>
<% @request.errors.full_messages.each do |m| %>
<li><%= m %></li>
<% end %>
</ul>
<% end %>

<%= form_for @request do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br><br>
<%= f.label :date %>
<%= f.date_field :date  %>
<br><br>
<%= f.label :injury %>
<%= f.text_field :injury %>
<br><br>
<%= f.label :damages %>
<%= f.number_field :damages %>
<br><br>
<%= f.label :description %>
<%= f.text_area :description %>
<br><br>
<%= f.label :police_report %>
<%= f.check_box :police_report, {}, 'true' %>
<br><br>
<%#remember hidden field%>
<%= f.submit %>
<% end %>