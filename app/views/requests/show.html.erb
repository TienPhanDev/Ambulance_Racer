<h1><%= @request.title %></h1>

<div>
<table>

<tr>
<td>Name:</td>
<td><%= @request.client.name %></td>
</tr>

<tr>
<td>Date:</td>
<td><%= @request.date.strftime("%b %d, %Y") %></td>
</tr>

<tr>
<td>Injury:</td>
<td><%= @request.injury %></td>
</tr>

<tr>
<td>Damages:</td>
<td><%= "$#{@request.damages}" %></td>
</tr>

<tr>
<td>Description:</td>
<td><%= @request.description %></td>
</tr>

</table>
</div>
<br><br>
<div>
  <% if current_user.lawyer == true %>
  <%= form_tag consults_path, :method => :post do %>
  <%= hidden_field_tag :request_id, @request.id %>
  <%= submit_tag "Offer Consult" %>
  <% end %>
  <% end %>
</div>

<div>
  <% if @request.consult %>
  <h4>Pending Consults: <%= link_to @request.consult.lawyer.name, consult_path(@request.consult.id) %></h4>
  <% end %>
</div>

