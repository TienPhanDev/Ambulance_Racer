<h1><%= @request.title %></h1>

<div>
<table>

<tr>
<td>Name:</td>
<td><%= @request.client.name %></td>
</tr>

<tr>
<td>Date:</td>
<td><%= @request.date.strftime("%b %d, %Y") %></td>
</tr>

<tr>
<td>Injury:</td>
<td><%= @request.injury %></td>
</tr>

<tr>
<td>Damages:</td>
<td><%= "$#{@request.damages}" %></td>
</tr>

<tr>
<td>Description:</td>
<td><%= @request.description %></td>
</tr>

</table>
</div>
<br><br>
<div>
  <% if current_user.lawyer == true %>
  <%= button_to "Offer Consult", consults_path, params {request_id: @request.id}, method: :post %>
  <% end %>
</div>

